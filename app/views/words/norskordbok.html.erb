<div class="norskbody">

  <div class="navigation">
  <%= link_to "setninger", norsksetninger_path, :class=>"navigationbutton" %>
  <%= link_to "adjectiv", norskadjectiv_path, :class=>"navigationbutton" %>
  <%= link_to "substantiv", norsksubstantiv_path, :class=>"navigationbutton" %>
  <%= link_to "tall", norsktall_path, :class=>"navigationbutton" %>
  <%= link_to "ordbok", norskordbok_path, :class=>"navigationbuttondark" %>
  </div>



  <div class="norskcolumn">


      <% @words.each do |word|%>
          <details class="norskcardtitle">
            <summary>
              <div class="norskcardmaintitle">
                <%= word.core %>
                <% translations = @translations.where(word: word.id) %>
                <% unless translations.nil? || translations.empty? %>
                  <span class="comment"><ul><% translations.each do |translation|%><li><%= translation.meaning %><%= link_to word_translation_path(word, translation), data: {turbo_method: :delete} do %><span class="smallnavigationbutton"><i class="fa fa-minus-circle" aria-hidden="true"></i></span><% end  %><% end  %></ul><%= link_to "Add translation", new_word_translation_path(word, @translation), :class=>"navigationbutton" %></span>
                <% else %>
                  <span class="comment">missing translation!<%= link_to "Add translation", new_word_translation_path(word, @translation), :class=>"navigationbutton" %></span>
                <% end %>
              </div>
              <div>
                - <%= word.family %> <br>
                <div class="smallnavigationbutton">
                  <i class="fa fa-chevron-circle-down" aria-hidden="true"></i>

                </div>
              </div>
            </summary>
            <%= link_to "Edit word", edit_user_word_path(@user, word), :class=>"navigationbutton" %>
          </details>
      <% end  %>


  </div>

  <div class="norsksidewindow">
    <div class="norskcardcategory">
      <div class="norskflex">
        <div class="norskcolumn">
          <div class="smallbutton">
            <i class="fa-solid fa-circle-chevron-left"></i>
          </div>
        </div>
        <div class="norskcolumn">
          <%= link_to "Add new word", new_user_word_path(@user, @word), :class=>"navigationbutton" %>
        </div>
      </div>
    </div>
  </div>


</div>
